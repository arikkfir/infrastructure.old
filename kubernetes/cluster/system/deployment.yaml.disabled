apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: deployment
  namespace: system
spec:
  dependsOn:
    - namespace: system
      name: flux-system
  interval: 5m
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  path: ./kubernetes/manifests/system/deployment
  prune: true
